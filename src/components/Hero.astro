---
import "../styles/global.css";
---

<section
  id="hero"
  class="grid 2xl:grid-cols-6 gap-16 xl:gap-24 pt-10 mx-auto max-w-7xl px-4 xl:px-6 2xl:px-0 text-zinc-400"
>
  <div class="relative col-span-1 2xl:col-span-1 scroll-mt-32">
    <div class="sticky top-28 flex flex-col items-center 2xl:items-start">
      <div class="opacity-80 will-change-transform transform-none">
        <figure class="w-fit relative mb-5 p-1">
          <img
            loading="lazy"
            decoding="async"
            src="src/assets/fake-avatar-zip.webp"
            alt="Hero Image"
            class="w-50 h-auto rounded-3xl m-4 shadow-[0_0_300px_20px_rgba(255,255,255,0.1)]"
          />
        </figure>
      </div>
      <div class="overflow-hidden 2xl:text-start text-center w-full">
        <div
          class="will-change-transform"
          style={{ opacity: 1, transform: "none" }}
        >
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Edu Lorenzo</h1>
          <h2>Desarrollador Full Stack</h2>
        </div>
      </div>
      <div class="flex items-center text-sm text-muted-foreground mb-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-globe w-4 h-4 inline mr-1"
          ><circle cx="12" cy="12" r="10"></circle><path
            d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path><path
            d="M2 12h20"></path></svg
        >
        Made in Galicia, Spain
      </div>
      <div class="grid grid-flow-col auto-cols-max gap-2 mb-6">
        <button data-state="closed">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-mail inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-transparent text-orange-600 hover:bg-orange-600 hover:text-white duration-500 h-9 w-9 p-2"
            ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
              d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
          >
        </button>
        <button data-state="closed"
          ><a
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-transparent text-orange-600 hover:bg-orange-600 hover:text-white duration-500 h-9 w-9 p-2"
            href="https://github.com/cuter97"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-github"
              ><path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
            ></a
          >
        </button>
        <button data-state="closed"
          ><a
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-transparent text-orange-600 hover:bg-orange-600 hover:text-white duration-500 h-9 w-9 p-2"
            href="https://www.linkedin.com/in/agustin-castets"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-linkedin"
              ><path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path><rect width="4" height="12" x="2" y="9"></rect><circle
                cx="4"
                cy="4"
                r="2"></circle></svg
            ></a
          >
        </button>
        <button data-state="closed">
          <a
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex
            items-center justify-center whitespace-nowrap rounded-md text-sm
            font-medium transition-colors focus-visible:outline-none
            focus-visible:ring-1 focus-visible:ring-ring
            disabled:pointer-events-none disabled:opacity-50 bg-transparent
            text-orange-600 hover:bg-orange-600 hover:text-white duration-500 h-9
            w-9 p-2"
            href="/pdf/cv-es.pdf"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-file-text"
            >
              <path
                d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"
              >
              </path>
              <path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M10 9H8">
              </path><path d="M16 13H8"></path><path d="M16 17H8"></path></svg
            ></a
          >
        </button>
      </div>
    </div>
  </div>
</section>
